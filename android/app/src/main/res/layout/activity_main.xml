<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Background Banner -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerBanner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:tabIndicatorHeight="0dp"
        app:tabBackground="@drawable/bg_pill"
        app:layout_constraintBottom_toBottomOf="@id/viewPagerBanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="易宿旅行"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发现理想的住宿体验"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="@id/tvAppTitle" />

    <!-- Search Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/viewPagerBanner"
        app:layout_constraintBottom_toBottomOf="@id/viewPagerBanner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="#2196F3" />
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前位置"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:textColor="#999"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入住"
                        android:textSize="12sp"
                        android:textColor="#999"/>
                    <TextView
                        android:id="@+id/tvCheckInDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01月30日"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>
                </LinearLayout>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1晚"
                    android:background="@drawable/bg_pill"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="离店"
                        android:textSize="12sp"
                        android:textColor="#999"/>
                    <TextView
                        android:id="@+id/tvCheckOutDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01月31日"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/etSearchKeyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="搜索酒店/地名/关键词"
                android:textSize="16sp"/>

            <!-- 快捷标签 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快捷筛选："
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"/>
            
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacing="8dp"
                app:chipSpacingVertical="8dp">
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5星"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4星"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPriceLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经济型"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPriceMid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舒适型"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTagFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亲子"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTagLuxury"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="豪华"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTagParking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费停车"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
            </com.google.android.material.chip.ChipGroup>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="查找酒店"
                android:layout_marginTop="20dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
    <!-- Quick Actions / Promos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardSearch"
        android:padding="16dp">
        
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="8dp">
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="特惠专区\n低至5折"
                 android:gravity="center"
                 android:background="#E3F2FD"
                 android:textColor="#1976D2"
                 android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="8dp">
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="我的订单\n查看行程"
                 android:gravity="center"
                 android:background="#FFF3E0"
                 android:textColor="#E64A19"
                 android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
